        div
          img(src="http://via.placeholder.com/400x300" alt="Leavenworth")
    #card
      select(v-on:change="filterList")
        option(value="") Select type of cards...
        option(v-for="item in uniqueCardsList") {{item}}
      div(v-show="type === '' || type === card.type" v-for="card in cards"  v-on:click="toggleLanguage(card)")
        p(v-show="!card.showDetail") {{card.english}}
        p(v-show="card.showDetail") {{card.german}}
